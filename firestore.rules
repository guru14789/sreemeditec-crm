
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper: Check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper: Check if user has admin role
    function isAdmin() {
      return isSignedIn() && 
             get(/databases/$(database)/documents/employees/$(request.auth.uid)).data.role == 'SYSTEM_ADMIN';
    }

    // Employees Collection: Only admins can manage staff. Users can read all for registry sync.
    match /employees/{uid} {
      allow read: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    // Other Collections (Clients, Products, etc.)
    match /clients/{id} { allow read, write: if isSignedIn(); }
    match /vendors/{id} { allow read, write: if isSignedIn(); }
    match /products/{id} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /leads/{id} { allow read, write: if isSignedIn(); }
    match /serviceTickets/{id} { allow read, write: if isSignedIn(); }
    match /invoices/{id} { allow read, write: if isSignedIn(); }
    match /stockMovements/{id} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /expenses/{id} { 
      allow read: if isSignedIn(); 
      allow create: if isSignedIn();
      allow update: if isAdmin();
    }
    match /tasks/{id} { allow read, write: if isSignedIn(); }
    match /attendance/{id} { allow read, write: if isSignedIn(); }
    match /pointHistory/{id} { allow read: if isSignedIn(); allow write: if isAdmin(); }
    match /notifications/{id} { allow read, write: if isSignedIn(); }
  }
}
